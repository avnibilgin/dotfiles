{

    // Group Quicklinks
    "group/quicklinks": {
        "orientation": "horizontal",
        "modules": [
            "custom/filemanager",
            "custom/browser",
            "custom/terminal",
            "custom/editor"
         ]
    },

    // Group Time
    "group/time": {
        "orientation": "horizontal",
        "modules": [
        "custom/timer"
         ]
    },

    // Group Misc
"group/misc": {
    "orientation": "inherit",
    "drawer": {
        "transition-duration": 500,
        "children-class": "not-misc",
        "transition-right-to-left": false,
    },
    "modules": [
        "custom/misc",
        "custom/screenrecorder",
        "idle_inhibitor",
        "custom/timer"
    ]
},

        // Group Devices
    "group/devices": {
        "orientation": "horizontal",
        "modules": [
            "pulseaudio",
            "bluetooth",
            "custom/ddc_brightness",
            "network"
         ]
    },

        // Group System
    "group/system": {
        "orientation": "horizontal",
        "modules": [
            "custom/updates",
            "custom/mako",
            "custom/copyq",
            "custom/power"
         ]
    },

    "bluetooth": {
        "format": "",
        "format-disabled": "", // an empty format will hide the module
        "format-connected": "Ôäì {num_connections}",
        "on-click": "blueman-manager",
        "on-click-right": "blueman-manager",
        "tooltip-format": "Ôäì {device_alias}",
        "tooltip-format-connected": "{device_enumerate}",
        "tooltip-format-enumerate-connected": "Ôäì {device_alias}"
    },

    "custom/cliphist": {
        "format": "Û∞Öç{}",
        "exec": "echo ; echo clipboard",
        "on-click": "sleep 0.1 && ~/.config/hypr/scripts/cliphist.sh c",
        "on-click-right": "sleep 0.1 && ~/.config/hypr/scripts/cliphist.sh d",
        "on-click-middle": "sleep 0.1 && ~/.config/hypr/scripts/cliphist.sh w",
        "interval" : 86400, // once every day
        "tooltip": true,
        "on-scroll-up": "dunstctl close",
        "on-scroll-down": "dunstctl history-pop"
    },

        "custom/copyq": {
        "format": "Û∞Öç",
        "on-click": "copyq toggle",
        "tooltip": false
    },

    "include": ["~/.config/waybar/dcol_modules/clock.json"],

    "custom/timer": {
        "align": 0,
        "tooltip": false,
        "exec": "$HOME/.config/hypr/scripts/waybar-timer.sh",
        "on-click": "date --date='30 minutes' +%s > /var/tmp/waybar_timer",
        "on-click-right": "echo READY > /var/tmp/waybar_timer",
        "on-click-middle": "date --date='45 minute' +%s > /var/tmp/waybar_timer",
        "on-scroll-up": "$HOME/.config/hypr/scripts/waybar-timer-steps.sh up",
        "on-scroll-down": "$HOME/.config/hypr/scripts/waybar-timer-steps.sh down",
        "interval": 1
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔàÖ",
            "deactivated": "ÔàÑ"
        }
    },

    "cpu": {
        "interval": 10,
        "format": "Û∞çõ {usage}%",
        "format-alt": "{icon0}{icon1}{icon2}{icon3}",
        "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"]
    },

    "custom/padd": {
        "format": "",
        "interval" : "once",
        "tooltip": false
    },

    "custom/gpuinfo": {
        "exec": " ~/.config/hypr/scripts/gpuinfo.sh",
        "return-type": "json",
        "format": "Ôãã {}",
        "interval": 5, // once every 5 seconds
        "tooltip": true,
        "max-length": 1000
    },

    "custom/misc": {
        "format": "ÓàÄ ",
        "tooltip": false
    },

    "custom/filemanager": {
        "format": "ÔÅª ",
        "on-click": "dolphin",
        "tooltip": false
    },

     "custom/terminal": {
        "format": "Ôíâ ",
        "on-click": "alacritty",
        "tooltip": false
    },

    "custom/editor": {
        "format": "Ôãê",
        "on-click": "geany",
        "tooltip": false
    },

    "custom/browser": {
        "format": "Ôâ© ",
        "on-click": "firefox",
        "tooltip": false
    },

    "custom/appmenu": {
        "format": "APPS",
        "on-click": "~/.config/nwg-panel/nwg_menu_launcher.sh",
        "on-click-right": "rofi -show drun -replace",
        "tooltip": false
    },

    "memory": {
        "interval": 30,
        "format": "Û∞æÜ {percentage}%",
        "format-alt": "Û∞æÖ {used}GB",
        "max-length": 10,
        "tooltip": true,
        "tooltip-format": "Óâ¶ {used:0.1f}GB/{total:0.1f}GB"
    },

    "custom/screenrecorder": {
        "exec": "$HOME/.config/hypr/scripts/waybar-wf-recorder.sh status",
        "interval": "once",
        "signal": 1,
        "return-type": "json",
        "tooltip": true,
        "format": "{}",
        "on-click": "$HOME/.config/hypr/scripts/waybar-wf-recorder.sh toggle fullscreen",
        "on-click-right": "$HOME/.config/hypr/scripts/waybar-wf-recorder.sh toggle region"
    },

    "mpris": {
        "format": "{player_icon} {dynamic}",
        "format-paused": "{status_icon} <i>{dynamic}</i>",
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        // "ignored-players": ["firefox"]
        "max-length": 1000,
        "interval": 1
    },

    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Û∞§® {signalStrength}%",
        "format-ethernet": "Û±òñ Wired",
        "tooltip-format": "Û±òñ {ipaddr} ÔÑπ {bandwidthUpBytes} ÔÑ∫ {bandwidthDownBytes}",
        "format-linked": "Û±òñ {ifname} (No IP)",
        "format-disconnected": "ÔÅ± Disconnected",
        "format-alt": "Û∞§® {essid}",
        "on-click": "alacritty --class nmtui -e nmtui",
        "interval": 5
    },

    "custom/power": {
        "format": "ÔÄë{}",
        "exec": "echo ; echo ÔÄë logout",
        "on-click": "~/.config/hypr/scripts/logoutlaunch.sh 2",
        "interval" : 86400, // once every day
        "tooltip": true
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "Ôë¶",
        "on-click": "~/.config/hypr/scripts/waybar-vol-progbar.sh --toggle",
        "on-click-right": "pavucontrol-qt",
        "on-scroll-up": "~/.config/hypr/scripts/waybar-vol-progbar.sh --inc",
        "on-scroll-down": "~/.config/hypr/scripts/waybar-vol-progbar.sh --dec",
        "tooltip-format": "{icon} {desc}",
        "format-icons": {
            "headphone": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "Ô°´",
        "format-source-muted": "ÔÑ±",
        "on-click": "pavucontrol -t 4",
        "on-click-middle": "~/.config/hypr/scripts/volumecontrol.sh -i m",
        "on-scroll-up": "~/.config/hypr/scripts/volumecontrol.sh -i i",
        "on-scroll-down": "~/.config/hypr/scripts/volumecontrol.sh -i d",
        "tooltip-format": "{format_source} {source_desc} // {source_volume}%",
        "scroll-step": 5
    },

    "custom/spotify": {
        "exec": "/usr/bin/python3 $HOME/.config/waybar/modules/mediaplayer.py --player spotify",
        "format": "ÔÜº {}",
        "return-type": "json",
        "on-click": "playerctl play-pause --player spotify",
        "on-click-right": "playerctl next --player spotify",
        "on-click-middle": "playerctl previous --player spotify",
        "on-scroll-up": "~/.config/hypr/scripts/spotifyvolumecontrol.sh up",
        "on-scroll-down": "~/.config/hypr/scripts/spotifyvolumecontrol.sh down",
        "max-length": 25,
        "escape": true,
        "tooltip": true
    },

	"wlr/taskbar": {
		"format": "{icon}",
		"icon-size": {},
		"icon-theme": "${i_theme}",
        "spacing": 0,
		"tooltip-format": "{title}",
		"on-click": "activate",
		"on-click-middle": "close",
		"on-click-right": "fullscreen",
		"ignore-list": [
            "com.github.hluk.copyq",
			"alacritty-dropterm",
            "feathernotes",
            "ranger",
            "org.keepassxc.KeePassXC"
		],
		"app_ids-mapping": {
			"firefoxdeveloperedition": "firefox-developer-edition"
		}
	},

    "tray": {
        "icon-size": {},
        "spacing": 5
    },

    "custom/ddcutil": {
        "format": "{percentage}% {icon}",
        "interval": 1,
        "format-icons": ["Ôóõ", "Ôóö", "Ôóô"],
        "exec": "~/.config/hypr/scripts/waybar-ddcutil.py",
        "return-type": "json"
    },

    "custom/ddc_brightness": {
        "format": "{icon} {percentage}%",
        "format-icons": ["ÔÅÇ"],
        "exec": "~/.config/hypr/scripts/waybar-ddc-module.sh",
        "return-type": "json",
        "on-scroll-up": "echo '+' > /tmp/waybar-ddc-module-rx",
        "on-scroll-down": "echo '-' > /tmp/waybar-ddc-module-rx",
        "on-click": "echo 'min' > /tmp/waybar-ddc-module-rx",
        "on-click-right": "echo 'max' > /tmp/waybar-ddc-module-rx",
        "tooltip": false,
    },

    "custom/mako": {
        "exec": "~/.config/hypr/scripts/mako.sh",
        "on-click": "~/.config/hypr/scripts/mako.sh toggle_mode",
        "interval": 1,
        "on-scroll-up": "makoctl dismiss",
        "on-scroll-down": "makoctl restore"
    },

    "custom/updates": {
        "format": "ÔÇ´  {}",
        "exec": "~/.config/hypr/scripts/updates.sh",
        "restart-interval": 60,
        "return-type": "json",
        "escape": true,
        "on-click": "~/.config/hypr/scripts/updates.sh up",
        "tooltip-format": "{}",
        "tooltip": true
    },

    "hyprland/window": {
        "format": " ÔåÉ {}",
        "separate-outputs": true,
        "rewrite": {
            "${USER}@${set_sysname}:(.*)": "$1 Ôíâ",
            "(.*) ‚Äî Mozilla Firefox": "$1 Û∞àπ",
            "(.*)Mozilla Firefox": "Firefox Û∞àπ",
            "(.*) - Visual Studio Code": "$1 Û∞®û",
            "(.*)Visual Studio Code": "Code Û∞®û",
            "(.*) ‚Äî Dolphin": "$1 Û∞âã",
            "(.*)Spotify": "Spotify Û∞ìá",
            "(.*)Steam": "Steam Û∞ìì"
        },
        "max-length": 1000
    },

    "hyprland/workspaces": {
        "on-scroll-up": "hyprctl dispatch workspace -1",
        "on-scroll-down": "hyprctl dispatch workspace +1",
        "all-outputs": true,
        "active-only": false,
        "on-click": "activate",
        "persistent-workspaces": {
            // START WORKSPACES
    "*": 5
            // END WORKSPACES
        }
    }
}
